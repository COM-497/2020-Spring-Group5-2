<% include ./partials/header %>      
<style>
  .jumbotron {
    background-color: #f4511e;
    color: #fff;
    padding: 100px 25px;
  }

.jumbotron text-center{
text-align: center;
}
</style>

<div class="container">
</br>
  <div class="jumbotron text-center">
      <h1>EVENTS</h1> 
      <p>Find an event that you would like to learn more about</p> 
      <a href="/newEvent" class="btn btn-light">New Event</a>
      
    </div>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
  <div class="col-md-12">
      <% if(noMatch !== null) { %>
      <h3><%= noMatch %></h3>
      <% } %>
  </div>
  </div>

<% events.forEach(events => { %>
<div class="card">
    <div class="card-header">
        <%= `${events.eventName}` %> 
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= `Hosted by: ${events.organization}` %></h5>
      <p class="card-text"><%= `${events.descriptionEvent}` %></p>

      <a href="/learnmore/<%= events._id %>" class="btn btn-primary">Learn more</a>
      <a href="/donate" class="btn btn-primary">Donate Now</a>
    </br>
    </div>
  </div>
</br>
  <% }); %>
</div>
